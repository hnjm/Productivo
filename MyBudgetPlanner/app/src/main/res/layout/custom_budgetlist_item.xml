<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentMoneyPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/budgetProgressBar"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_toLeftOf="@+id/budgetProgressBar"
        android:layout_toStartOf="@+id/budgetProgressBar"
        android:text="100"
        android:textColor="@android:color/black"
        tools:ignore="RelativeOverlap" />

    <ProgressBar
        android:id="@+id/budgetProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        android:foreground="@color/colorAccent"
        android:padding="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/customLayoutBudgetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/currentMoneyPercent"
        android:layout_alignBottom="@+id/currentMoneyPercent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/custom_budget_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:typeface="monospace"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>